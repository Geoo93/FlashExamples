package {	import flash.events.*	import flash.display.*;	public class Circle extends MovieClip	{		var rotationRads:Number;		var refM:MovieClip;		public function Circle(temp:MovieClip)		{			refM = temp;			this.addEventListener(Event.ENTER_FRAME, gameLoop);			this.rotation +=  Math.random() * 180;			rotationRads = this.rotation * Math.PI / 180;		}		function gameLoop(myEvent:Event):void		{						this.x +=  Math.cos(rotationRads) * 2;			this.y +=  Math.sin(rotationRads) * 2;						this.alpha -=  0.08;			if (this.alpha < 0)			{				refM.Destroy(this);				this.removeEventListener(Event.ENTER_FRAME, gameLoop);			}		}	}}