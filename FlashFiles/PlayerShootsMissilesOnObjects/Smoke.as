package {	import flash.events.Event;	import flash.events.MouseEvent;	import flash.display.MovieClip;	public class Smoke extends MovieClip	{		var rotationRads:Number;		var refM:MovieClip;		public function Smoke(temp:MovieClip)		{			refM = temp;			this.addEventListener(Event.ENTER_FRAME, gameLoop);			this.rotation +=  Math.random() * 180;			if (Math.random() * 2 > 1)			{				this.rotation *=  -1;			}			rotationRads = this.rotation * Math.PI / 180;		}		function gameLoop(myEvent:Event):void		{						this.x +=  Math.cos(rotationRads) * .1;			this.y +=  Math.sin(rotationRads) * .1;
						this.alpha -=  0.02;			if (this.alpha < 0)			{				refM.destroyTrailer(this);				this.removeEventListener(Event.ENTER_FRAME, gameLoop);			}		}	}}