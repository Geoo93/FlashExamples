package {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.events.KeyboardEvent;	import flash.geom.ColorTransform;	public class Main extends MovieClip	{		var myColorTransform = new ColorTransform  ;		var timer:Number = 0;		var mapState:Boolean = false;		public function Main()		{			this.addEventListener(Event.ENTER_FRAME,gL);			stage.addEventListener(KeyboardEvent.KEY_DOWN,kDown);			stage.addEventListener(KeyboardEvent.KEY_UP,kUp);			stop();		}		public function gL(myEvent:Event):void		{			if (mapState == false)			{				timer +=  1;				trace(timer);								if (timer <= 1)				{					myColorTransform.color = Math.random() * 0xffffff;					obj1.transform.colorTransform = myColorTransform;				}			}			if (mapState == true)			{				myColorTransform.color = 0xffffff;				obj1.transform.colorTransform = myColorTransform;			}					}		function kDown(event:KeyboardEvent):void		{			//trace("Key Code Pressed: " + event.keyCode);			if (event.keyCode == 32)			{				timer = 0;				mapState = !mapState;			}		}		function kUp(event:KeyboardEvent):void		{		}	}}