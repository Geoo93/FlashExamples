package  {		import flash.events.Event;	import flash.geom.Point;		public class LineAnimation extends BasicAnimation {		// We don't need a constructor. The super class does everything we need		protected var colour:uint;				// override the begin function of basic animation to make a different effect		override protected function begin():void {			colour = Math.random()*0xFFFFFF;			var circle:BasicCircle = new BasicCircle(30+Math.random()*30, colour, 20+Math.random()*20);			circle.addEventListener("shapeComplete", drawLine);			addChild(circle);					}				protected function drawLine(e:Event):void {			// set the end of the animation here			// randomise an angle and a distance			var angle = Math.PI*2*Math.random();			var distance = 100+Math.random()*200;			end = new Point(Math.cos(angle)*distance, distance*Math.sin(angle));			var line:BasicLine = new BasicLine(end, colour, 4+Math.random()*16, 20+Math.random()*20);			line.addEventListener("shapeComplete", drawCircle);			addChild(line);		}				protected function drawCircle(e:Event):void {			var circle:BasicCircle = new BasicCircle(30+Math.random()*30, colour, 20+Math.random()*20);			circle.x=end.x;			circle.y=end.y;			circle.addEventListener("shapeComplete", finish);			addChild(circle);		}	}	}