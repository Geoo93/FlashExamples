package  {		import flash.display.Sprite;	import fl.motion.Color;	import flash.events.Event;	import flash.geom.Matrix;	import fl.transitions.Tween;	import fl.transitions.TweenEvent;	import fl.transitions.easing.*;		public class AnimatedRamp extends Sprite {		private var tween:Tween;		public var trans:Number;		private var startColor:uint;		private var endColor:uint;		public function AnimatedRamp(sx:Number=640, sy:Number=480) {			var mat:Matrix = new Matrix();			mat.createGradientBox(sx, sy);			graphics.beginGradientFill("radial", [ 0xFFFFFF, 0xAAAAAA ], [ 255, 255 ], [ 0, 255 ], mat);			graphics.drawRect(0, 0, sx, sy);			graphics.endFill();			tweenMe();			startColor = Math.random()*0xFFFFFF;			endColor = Math.random()*0xFFFFFF;		}				private function tweenMe(t:TweenEvent=null):void {			startColor = endColor;			endColor = Math.random()*0xFFFFFF;			tween = new Tween(this, "trans", Regular.easeInOut, 0, 1, 100+Math.random()*300);			tween.addEventListener(TweenEvent.MOTION_CHANGE, update);			tween.addEventListener(TweenEvent.MOTION_FINISH, tweenMe);		}				private function update(t:TweenEvent):void {			var color:Color = new Color();			color.setTint(Color.interpolateColor(startColor, endColor, trans), 0.5);			transform.colorTransform = color;		}	}	}