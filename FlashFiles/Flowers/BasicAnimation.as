package  {		import flash.display.Sprite;	import flash.geom.Point;	import flash.events.Event;		public class BasicAnimation extends Sprite {		public var end:Point;		public function BasicAnimation() {			end = new Point(); // default end point of 0,0			blendMode = "layer"; // gets rid of ugly alpha effects			// could use -> addEventListener(Event.ADDED_TO_STAGE			begin();		}				protected function begin():void {			// stuff specific to this animation. Override this function in subclasses			var circle:BasicCircle = new BasicCircle(50+Math.random()*50,													 0xFFFFFF*Math.random(),													 10+Math.random()*10);			// when the circle has fully animated, finish this animation			circle.addEventListener("shapeComplete", finish);			// add the circle to the screen			addChild(circle);		}				final protected function finish(e:Event=null):void {			// tll the controller this animation is finished			dispatchEvent(new Event("animationComplete"));		}	}	}