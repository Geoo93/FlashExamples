package {		import flash.events.Event;		public class FlowerAnimation2 extends FlowerAnimation {				override protected function nextPetal(e:Event=null):void {			currentPetal++;			var circle:BasicLeaf = new BasicLeaf(petalSize*4, colour, 10+Math.random()*10);			circle.x=petalSize/6*Math.cos(Math.PI*2*(currentPetal/total));			circle.y=petalSize/6*Math.sin(Math.PI*2*(currentPetal/total));			circle.rotation = Math.atan2(circle.y, circle.x)/Math.PI*180;			if (currentPetal<total) {				circle.addEventListener("shapeComplete", nextPetal);			} else {				circle.addEventListener("shapeComplete", drawCircle);			}			addChild(circle);		}	}}