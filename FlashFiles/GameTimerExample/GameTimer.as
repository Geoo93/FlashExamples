package {	import flash.display.MovieClip;	import flash.events.Event;	public class GameTimer extends MovieClip	{		public var gameCounter:Number = 0;		public var gameTimerS:Number = 0;		public var gameTimerM:Number = 0;		public var gameTimerH:Number = 0;		public function GameTimer()		{			this.addEventListener(Event.ENTER_FRAME,gameL);		}		public function gameL(myEvent:Event):void		{			//gametime text...............................			//timer and color change;			gameCounter +=  1;			//seconds count			if (gameCounter == 24)			{				gameTimerS +=  1;				gameCounter = 0;			}			if ((gameTimerS < 10))			{				this.sText2.text = "0";			}			else			{				this.sText2.text = "";			}			this.sText2.appendText(String(gameTimerS));			//minutes count;			if (gameTimerS == 60)			{				gameTimerM +=  1;				gameTimerS = 0;			}			if ((gameTimerM < 1))			{				this.mText2.visible = false;			}			else			{				this.mText2.visible = true;			}			if ((gameTimerM < 10))			{				this.mText2.text = "0";			}			else			{				this.mText2.text = "";			}			this.mText2.appendText(String(gameTimerM));			// hours count;			if (gameTimerM == 60)			{				gameTimerH +=  1;				gameTimerM = 0;			}			if ((gameTimerH < 1))			{				this.hText2.visible = false;				this.timerText11.visible = false;			}			else			{				this.hText2.visible = true;				this.timerText11.visible = true;			}			if ((gameTimerH < 10))			{				this.hText2.text = "0";			}			else			{				this.hText2.text = "";			}			this.hText2.appendText(String(gameTimerH));		}	}}