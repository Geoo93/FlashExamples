package {	import flash.events.*;	import flash.display.*;	import flash.geom.*;	public class Sentinels2 extends MovieClip	{		public var refM:MovieClip;		public var randomSpawn:Number = 0;		public var randomSpawnState2:Boolean = false;		public function Sentinels2()		{			this.addEventListener(Event.ENTER_FRAME,gLoop);			refM = MovieClip(this.parent);			refM.sent2Array.push(this);		}		function gLoop(myEvent:Event):void		{			if (refM.pausee == false)			{				if (randomSpawnState2 == true)				{					refM.myColorTransform2.color = Math.random() * 0xFFFFFF;					this.transform.colorTransform = refM.myColorTransform2;					this.x = Math.random() * 500;					this.y = Math.random() * 300;					refM.pointsNum +=  200;					refM.bonusNum +=  50;										refM.killsNum += 1;					randomSpawnState2 = false;				}				if (this.hitTestObject(refM.baseLine))				{					refM.basse.width -=  20;//health					randomSpawnState2 = true;				}				if (! refM.gameTimerM >= 3 && this.hitTestObject(refM.baseLine) && refM.gameTimerS == 59)				{					refM.bonusNum +=  200;				}				for (var e:uint = 0; e < refM.bulletsArray.length; e += 1)				{					if (refM.bulletsArray[e].hitTestObject(this))					{						refM.sent2HealthCount -=  1;						destroyBullet(refM.bulletsArray[e]);					}				}				if (refM.electTarget.hitTestObject(this))				{					refM.explosion2(refM.tempp2);					refM.sent2HealthCount -=  1;				}				if (refM.gameTimerM >= 3)				{					this.y +=  refM.sent2Speed;					if (refM.sent2HealthCount <= 0)					{						randomSpawnState2 = true;						refM.sent2HealthCount = 5;					}				}				if (refM.gameTimerM >= 5)				{					refM.sent2Speed = 1.5;					if (refM.sent2HealthCount <= 0)					{						randomSpawnState2 = true;						refM.sent2HealthCount = 10;					}				}				if (refM.gameTimerM >= 10)				{					refM.sent2Speed = 2;										if (refM.sent2HealthCount <= 0)					{						randomSpawnState2 = true;						refM.sent2HealthCount = 15;					}				}			}		}		public function destroyBullet(bullet:MovieClip):void		{			var tempBullet:MovieClip;			for (var i:uint = 0; i < refM.bulletsArray.length; i++)			{				tempBullet = refM.bulletsArray[i];				if (tempBullet == bullet)				{					refM.bulletsArray.splice(i, 1);					bullet.parent.removeChild(bullet);					return;				}			}		}	}}