package {	import flash.events.*;	import flash.display.*;	import flash.geom.*;	public class Sentinels extends MovieClip	{		public var refM:MovieClip;		public var thisCount:Number = 0;		public var randomSpawnState1:Boolean = false;		public var randomY:Number = 0;		public function Sentinels()		{			this.addEventListener(Event.ENTER_FRAME,gameLoop);			refM = MovieClip(this.parent);			refM.sentArray.push(this);		}		function gameLoop(myEvent:Event):void		{			if (refM.pausee == false)			{				thisCount +=  1;				if (thisCount > 50)				{					thisCount = 0;					randomY +=  5;				}				if (randomY >= 400)				{					randomY = 400;				}				if (refM.sentColourState == false)				{					for (var n:uint = 0; n < refM.sentArray.length; n += 1)					{						refM.myColorTransform2.color = Math.random() * 0xFFFFFF;						refM.sentArray[n].transform.colorTransform = refM.myColorTransform2;						refM.sentArray[n].x = Math.random() * 500;						refM.sentArray[n].y = Math.random() * 300;						refM.sentColourState = true;					}				}				for (var i:uint = 0; i < refM.sentArray.length; i += 1)				{						refM.sentArray[i].y +=  refM.sentSpeed;									}				for (var j:uint = 0; j < refM.sentArray.length; j += 1)				{					if (refM.sentArray[j].hitTestObject(refM.baseLine))					{						refM.basse.width -=  10;						refM.sentArray[j].x = Math.random() * 500;						refM.sentArray[j].y = Math.random() * randomY;						refM.myColorTransform2.color = Math.random() * 0xFFFFFF;						refM.sentArray[j].transform.colorTransform = refM.myColorTransform2;					}					if (! refM.sentArray[j].hitTestObject(refM.baseLine) && refM.gameTimerS == 59)					{						refM.bonusNum +=  100;					}				}				for (var a:uint = 0; a < refM.sentArray.length; a += 1)				{					if (refM.electTarget.hitTestObject(refM.sentArray[a]))					{						refM.pointsNum +=  50;						refM.bonusNum +=  5;																		refM.explosion2(refM.tempp2);						refM.sentArray[a].x = Math.random() * 500;						refM.sentArray[a].y = Math.random() * randomY;						refM.myColorTransform2.color = Math.random() * 0xFFFFFF;						refM.sentArray[a].transform.colorTransform = refM.myColorTransform2;												refM.killsNum += 1;											}				}				for (var s:uint = 0; s < refM.sentArray.length; s += 1)				{					for (var e:uint = 0; e < refM.bulletsArray.length; e += 1)					{						if (refM.bulletsArray[e].hitTestObject(refM.sentArray[s]))						{							refM.pointsNum +=  50;														refM.target_mc.x = refM.sentArray[s].x;							refM.target_mc.y = refM.sentArray[s].y;							refM.myColorTransform2.color = Math.random() * 0xFFFFFF;							refM.sentArray[s].transform.colorTransform = refM.myColorTransform2;							refM.sentArray[s].x = Math.random() * 500;							refM.sentArray[s].y = Math.random() * randomY;														refM.explosion(refM.tempp);							destroyBullet(refM.bulletsArray[s]);							refM.killsNum += 1;						}					}				}			}		}		public function destroyBullet(bullet:MovieClip):void		{			var tempBullet:MovieClip;			for (var i:uint = 0; i < refM.bulletsArray.length; i++)			{				tempBullet = refM.bulletsArray[i];				if (tempBullet == bullet)				{					refM.bulletsArray.splice(i, 1);					bullet.parent.removeChild(bullet);					return;				}			}		}	}}