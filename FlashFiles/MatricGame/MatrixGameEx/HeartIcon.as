package {	import flash.events.*;	import flash.display.*;	import flash.geom.*;	public class HeartIcon extends MovieClip	{		public var refM:MovieClip;		public var hIconCount:Number = 0;		public var hIconState:String = "offStage";		public function HeartIcon()		{			this.addEventListener(Event.ENTER_FRAME,gameLoop);			refM = MovieClip(this.parent);		}		function gameLoop(myEvent:Event):void		{			if (refM.pausee == false)			{				if (hIconState == "move")				{					this.y +=  1;				}				if (hIconState == "Spawn")				{					this.x = Math.random() * 500;					this.y = Math.random() * 500;					hIconState = "move";				}				if (hIconState == "offStage")				{					this.x = 50000;										if (refM.basse.width < 300)					{						hIconCount = Math.round(Math.random() * 1000);						if (hIconCount == 435 || hIconCount == 595 || hIconCount == 815)						{							hIconState = "Spawn";						}					}				}				if (refM.electTarget.hitTestObject(this) || refM.mouseTarg.hitTestObject(this))				{					refM.pointsNum +=  20;					refM.bonusNum +=  50;					refM.basse.width +=  40;					hIconState = "offStage";				}				if (refM.baseLine.hitTestObject(this))				{					refM.basse.width +=  20;					hIconState = "offStage";				}			}			if (refM.pausee == true)			{				this.x = 50000;			}		}	}}