package {	import flash.display.*;	import flash.events.*;	import flash.geom.*;	public class TargetLine extends MovieClip	{		public var refM:MovieClip;		public var lineColorTransform = new ColorTransform  ;		public var myColor3:uint = Math.random() * 0xFFFFFF;		public var alphaState:Boolean = false;		public var lineTargetState:Boolean = false;		public var lineTargetCount:Number = 0;		public function TargetLine()		{			stage.addEventListener(Event.ENTER_FRAME,gameL);			refM = MovieClip(this.parent);		}		public function gameL(myEvent:Event):void		{			lineColorTransform.color = myColor3;			this.transform.colorTransform = lineColorTransform;			if (refM.mCar.hitTestPoint(this.x,this.y,true))			{				lineTargetState = false;				refM.collectorNum += 1;				refM.pointsNum += 100;								refM.healthBar.currentFrameNum +=  1;			}			if (lineTargetState == false)			{				myColor3 = Math.random() * 0xFFFFFF;				this.x = Math.random() * 700;				this.y = Math.random() * 700;				this.rotation = Math.random() * 360;				lineTargetState = true;			}			if (this.y > 550 || this.y < 130 || this.x > 550 || this.x < 130)			{				this.visible = false;				lineTargetState = false;			}			else			{				this.visible = true;			}		}	}}