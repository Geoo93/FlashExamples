package {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	public class PlayAgainButton extends MovieClip	{		var refM:MovieClip;		var restartState:Boolean = false;		var deathCount:Number = 0;		public function PlayAgainButton()		{			this.addEventListener(Event.ENTER_FRAME,gLoop);			this.addEventListener(MouseEvent.MOUSE_DOWN, MouseDown);			refM = MovieClip(this.parent);		}		function gLoop(event:Event):void		{			if (restartState == true)			{				this.x = 190;				this.y = 200;			}			if (restartState == false)			{				this.y = 1000;			}			refM.deaths.text = deathCount.toString();		}		function MouseDown(event:MouseEvent):void		{			if(refM.winner.winnerState == true)			{				deathCount = 0;			}			else			deathCount += 1;							restartState = false;			refM.winner.winnerState = false;			refM.loser.losingState = "offScreen";			refM.lorry1.x = 70;			refM.lorry1.y = 330;			refM.lorry1.rotation = 90;			refM.lorry1.lorryState = true;			refM.lorry1.counter +=  1;			refM.lorry1.speeed = 0;			refM.lorry1.speedMax = 8;			refM.lorry1.steering = 0;			refM.lorry1.speedMaxReverse = -4;			refM.lorry1.gameTimer = 12;			refM.box1.text3.alpha = 1;			refM.box1.text2.alpha = 1;		}	}}